    <script type="text/javascript">
        $(function () {
            $(".datepicker").datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                todayHighlight: true
            });
            $(".datepicker").on("change", function () {
                var indate = $(this).val();
                //alert(indate);
                var today = new Date(),
                    dd = '' + today.getDate(),
                    mm = '' + (today.getMonth() + 1),
                    yyyy = today.getFullYear();

                if (mm.length < 2)
                    mm = '0' + mm;
                if (dd.length < 2)
                    dd = '0' + dd;

                var dfull = [yyyy, mm, dd].join('-');
                //alert(dfull);

                if (indate < dfull) {
                    alert("Can not input invoice date less than today");
                    $(".datepicker").val("");
                    $("#divDueDate").empty();
                    $("#divDueDate").append('<div class="form-group" id="divDueDate">' +
                        '<h6>Invoice Due</h6>' +
                        '<input type="text" class="form-control" readonly="readonly"/>' +
                        '</div>');
                } else if (indate == dfull) {
                    $("#divDueDate").empty();
                    $("#divDueDate").append('<div class="form-group" id="divDueDate">' +
                        '<h6>Invoice Due</h6>' +
                        '<input type="text" class="form-control" readonly="readonly" value="immediately"/>' +
                        '</div>');
                } else {
                    $("#divDueDate").empty();
                    $("#divDueDate").append('<div class="form-group" id="divDueDate">' +
                        '<h6>Invoice Due</h6>' +
                        '<input type="text" class="form-control" readonly="readonly" value="' + indate + '"/>' +
                        '</div>');
                }
            })
        });
    </script>
